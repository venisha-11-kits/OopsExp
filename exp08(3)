import java.util.Scanner;

class TableThread implements Runnable {
    int number;
    TableThread(int number) {
        this.number = number;
    }

    public void run() {
        System.out.println("\n--- Multiplication Table Thread ---");
        for (int i = 1; i <= 10; i++) {
            System.out.println(number + " x " + i + " = " + (number * i));
            try {
                Thread.sleep(2000);
            } catch (InterruptedException e) {
                System.out.println(e);
            }
        }
        System.out.println("--- End of Table Thread ---");
    }
}

class DivisorThread implements Runnable {
    int number;
    DivisorThread(int number) {
        this.number = number;
    }

    public void run() {
        System.out.println("\n--- Divisor Thread ---");
        for (int i = 1; i <= number; i++) {
            if (number % i == 0) {
                System.out.println("Divisor: " + i);
                try {
                    Thread.sleep(2000);
                } catch (InterruptedException e) {
                    System.out.println(e);
                }
            }
        }
        System.out.println("--- End of Divisor Thread ---");
    }
}

public class NumberOperations {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int num = sc.nextInt();

        Thread t1 = new Thread(new TableThread(num));
        Thread t2 = new Thread(new DivisorThread(num));

        t1.start();
        t2.start();
    }
}
